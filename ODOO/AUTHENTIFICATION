def get_article_info(models, db, uid, password, article_name):
    """
    Récupère le code, le prix et la quantité en stock d'un article dans les modèles Odoo en fonction du nom de l'article.
    
    Args:
    - models: L'objet ServerProxy pour accéder aux modèles Odoo
    - db: Nom de la base de données Odoo
    - uid: Identifiant de l'utilisateur Odoo
    - password: Mot de passe de l'utilisateur Odoo
    - article_name: Nom de l'article
    
    Returns:
    - Un dictionnaire contenant le code, le prix et la quantité en stock de l'article si trouvé, sinon None
    """
    try:
        product_id = find_product_id(models, db, uid, password, article_name)
        if product_id:
            article_data = models.execute_kw(db, uid, password,
                                             'product.product', 'read',
                                             [product_id], {'fields': ['default_code', 'list_price', 'qty_available']})
            if article_data:
                return {
                    'code': article_data[0]['default_code'],
                    'price': article_data[0]['list_price'],
                    'quantity_available': article_data[0]['qty_available']
                }
            else:
                print(f"Article '{article_name}' trouvé mais impossible de récupérer les informations.")
                return None
        else:
            print(f"Article '{article_name}' non trouvé.")
            return None
    except Exception as e:
        print(f"Erreur lors de la recherche de l'article : {e}")
        return None

# Utilisation de la fonction get_article_info() pour récupérer le code, le prix et la quantité en stock d'un article spécifique
article_name_to_find = 'Souris Gameur RGB'
article_info = get_article_info(odoo_connection, db, 2, password, article_name_to_find)
if article_info:
    print(f"Informations sur l'article '{article_name_to_find}':")
    print(f"Code: {article_info['code']}")
    print(f"Prix: {article_info['price']}")
    print(f"Quantité en stock: {article_info['quantity_available']}")
#########################################################################################
def get_article_image(models, db, uid, password, article_id):
    """
    Récupère l'image d'un article dans les modèles Odoo en fonction de l'ID de l'article.
    
    Args:
    - models: L'objet ServerProxy pour accéder aux modèles Odoo
    - db: Nom de la base de données Odoo
    - uid: Identifiant de l'utilisateur Odoo
    - password: Mot de passe de l'utilisateur Odoo
    - article_id: ID de l'article
    
    Returns:
    - Les données binaires de l'image si trouvée, sinon None
    """
    try:
        article_data = models.execute_kw(db, uid, password,
                                         'product.product', 'read',
                                         [article_id], {'fields': ['image']})
        if article_data and article_data[0].get('image'):
            return article_data[0]['image']
        else:
            print(f"Image pour l'article avec l'ID '{article_id}' non trouvée.")
            return None
    except Exception as e:
        print(f"Erreur lors de la récupération de l'image de l'article : {e}")
        return None

# Utilisation de la fonction get_article_image() pour récupérer l'image d'un article spécifique
article_id_to_fetch_image = 7  # Remplacez ceci par l'ID de l'article que vous souhaitez récupérer

article_image_data = get_article_image(odoo_connection, db, 2, password, article_id_to_fetch_image)

if article_image_data:
    with open('article_image.jpg', 'wb') as image_file:
        image_file.write(article_image_data)
    print("Image de l'article récupérée avec succès et enregistrée en tant que 'article_image.jpg'.")
else:
    print(f"Impossible de récupérer l'image de l'article avec l'ID '{article_id_to_fetch_image}'.")
